    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "chokidar": "^4.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "exif-reader": "^2.0.2",
    "exifreader": "^4.26.1",
    "framer-motion": "^12.4.7",
    "highlight.js": "^11.11.1",
    "js-yaml": "^4.1.0",
    "next": "^15.1.7",
    "next-mdx-remote": "^5.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0",
    "rehype": "^13.0.2",
    "rehype-highlight": "^7.0.2",
    "rehype-sanitize": "^6.0.0",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-html": "^16.0.1",
    "sharp": "^0.33.5",
