{
  "name": "tonkura-blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "predev": "node scripts/update-lastmod.mjs",
    "dev": "next dev",
    "prebuild": "npx ts-node -P scripts/tsconfig.json scripts/generate-cache.ts && npm audit",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "generate-photo-yaml": "npx ts-node scripts/generatePhotoYaml.ts",
    "new-post": "npx ts-node -T scripts/create-post.ts",
    "update-lastmod": "node scripts/update-lastmod.mjs",
    "watch-lastmod": "node scripts/update-lastmod.mjs --watch",
    "prestart": "npm audit",
    "security-check": "npm audit && npm outdated",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "npm run lint && npm run format:check && npm run build",
    "clean": "powershell -ExecutionPolicy Bypass -File .\\clean.ps1",
    "clean:rebuild": "npm run clean && npm install && npm run dev"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
