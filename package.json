{
  "name": "tonkura-blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "predev": "node scripts/update-lastmod.mjs",
    "dev": "next dev",
    "prebuild": "npx ts-node -P scripts/tsconfig.json scripts/generate-cache.ts && npm audit",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "generate-photo-yaml": "npx ts-node scripts/generatePhotoYaml.ts",
    "new-post": "npx ts-node -T scripts/create-post.ts",
    "update-lastmod": "node scripts/update-lastmod.mjs",
    "watch-lastmod": "node scripts/update-lastmod.mjs --watch",
    "prestart": "npm audit",
    "security-check": "npm audit && npm outdated",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "npm run lint && npm run format:check && jest --ci",
    "clean": "powershell -ExecutionPolicy Bypass -File .\\clean.ps1",
    "clean:rebuild": "npm run clean && npm install && npm run dev",
    "update-check": "npx npm-check-updates",
    "update-deps": "npx npm-check-updates -u && npm install",
    "update-minor": "npx npm-check-updates -u --target minor && npm install",
    "update-patch": "npx npm-check-updates -u --target patch && npm install",
    "analyze": "cross-env ANALYZE=true next build"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@mdx-js/loader": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@next/mdx": "15.1.7",
    "@radix-ui/react-tabs": "^1.1.3",
    "@sentry/nextjs": "^9.2.0",
    "@types/js-yaml": "^4.0.9",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "chokidar": "^4.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "exifreader": "4.26.1",
    "framer-motion": "^12.4.7",
    "highlight.js": "^11.11.1",
    "js-yaml": "^4.1.0",
    "next": "15.1.7",
    "next-mdx-remote": "5.0.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-icons": "^5.5.0",
    "rehype": "^13.0.2",
    "rehype-highlight": "^7.0.2",
    "rehype-sanitize": "^6.0.0",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-html": "^16.0.1",
    "sharp": "0.33.5",
    "tailwind-merge": "^3.0.2",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.0",
    "@next/bundle-analyzer": "^15.1.7",
    "@next/eslint-plugin-next": "15.1.7",
    "@tailwindcss/postcss": "^4.0.9",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.13.5",
    "@types/react": "19.0.10",
    "@types/react-dom": "19.0.4",
    "@typescript-eslint/eslint-plugin": "8.25.0",
    "@typescript-eslint/parser": "8.25.0",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "date-fns": "^4.1.0",
    "eslint": "9.21.0",
    "eslint-config-next": "15.1.7",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "gray-matter": "^4.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.3",
    "prettier": "^3.5.2",
    "tailwindcss": "^4.0.9",
    "ts-node": "10.9.2",
    "typescript": "5.7.3"
  }
}
